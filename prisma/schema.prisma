// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  VERY_EASY
  EASY
  MEDIUM
  HARD
  VERY_HARD
}

model Word {
  id         String     @id @default(cuid())
  word       String     @unique
  sentence   String?
  definition String?
  difficulty Difficulty @default(VERY_EASY)
}
